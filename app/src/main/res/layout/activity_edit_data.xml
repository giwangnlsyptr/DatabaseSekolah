<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.EditDataActivity"
    android:gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvnamasekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="NAMA SEKOLAH"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/etnamasekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvnamasekolah"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/tvalamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etnamasekolah"
        android:gravity="bottom"
        android:text="ALAMAT"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/etalamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvalamat"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/tvjmlsiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etalamat"
        android:text="JUMLAH SISWA"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/etjmlsiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvjmlsiswa"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/tvjmlguru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etjmlsiswa"
        android:text="JUMLAH GURU"
        android:textSize="30dp" />
    <EditText
        android:id="@+id/etjmlguru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvjmlguru"
        android:textSize="25dp" />
    <Button
        android:id="@+id/bsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/etjmlguru"
        android:text="Save"
        android:background="@android:color/black"
        android:textColor="@android:color/white"/>
</RelativeLayout>